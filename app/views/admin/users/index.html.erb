<div class="container">
  <div class="row py-4 pr-3">
    <div class="col-2 offset-1 bg-light text-center">
      <h3>会員一覧</h3>
    </div>
  </div>


  <div class="row">
    <div class="col-9 mx-auto">
      <table class='table table-hover table-inverse border-bottom'>
        <thead>
          <th>会員ID</th>
          <th>名前</th>
          <th>フリガナ</th>
          <th>ステータス</th>
          <th></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.full_name %></td>
              <td><%= user.full_name_kana %></td>
              <td>
                <% if user.is_active? %>
                  <span class="text-success">有効</span>
                <% else %>
                  <span class="text-danger">退会済み</span>
                <% end %>
              </td>
              <td><%= link_to "詳細へ", admin_user_path(user), class: "btn btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>