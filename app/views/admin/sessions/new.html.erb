<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="col-3 my-5 bg-light">管理者ログイン</h3>

      <div class="col-sm-12 col-md-10 col-lg-8 px-sm-0 mx-auto">
        <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>

          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
          </tr>

          <!--いつか使用したいのでコメントアウト
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %> -->

          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class:"btn btn-primary px-5" %></td>
          </tr>
        <% end %>
        </table>
      </div>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
