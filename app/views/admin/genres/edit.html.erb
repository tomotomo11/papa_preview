<h3>ジャンル編集</h3>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder: "#{@genre.name}" %>
	<%= f.radio_button :is_active, true %>
	<%= f.label :is_active, "有効" %>
	<%= f.radio_button :is_active, false %>
	<%= f.label :is_active, "無効" %>
	<%= f.submit "変更を保存" %>
<% end %>