<div class="container">
  <div class="row py-4">
    <div class="col-md-12">
      <h2 class="text-center mb-4 mt-3">ジャンル編集</h2>
    </div>
  </div>
  <%= render '/layouts/error_messages', post: @genre %>
  <div class="row">
    <div class="col-12 text-center">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <div>
        <%= f.label :name, "ジャンル名", class: "ml-2" %>
        <%= f.text_field :name, placeholder: "#{@genre.name}", class: "mx-4 w-25" %>
      	<%= f.radio_button :is_active, true %>
      	<%= f.label :is_active, "有効", class: "ml-2 mr-3" %>
      	<%= f.radio_button :is_active, false %>
      	<%= f.label :is_active, "無効", class: "ml-2 mr-3" %>
      	<%= f.submit "変更を保存", class:"btn btn-sm btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>