<div class="container">
  <div class="row py-4 pr-3">
    <div class="col-12 text-center mb-3">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center mb-3">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <%= f.label :name, "ジャンル名", class: "ml-2" %>
      <%= f.text_field :name, placeholder: "#{@genre.name}", class: "mx-4 w-25" %>
    	<%= f.radio_button :is_active, true %>
    	<%= f.label :is_active, "有効", class: "mr-2" %>
    	<%= f.radio_button :is_active, false %>
    	<%= f.label :is_active, "無効", class: "mr-3" %>
    	<%= f.submit "変更を保存", class:"btn btn-sm btn-success" %>
    <% end %>
    </div>
  </div>
</div>