<div class="container">
  <div class="row">
    <div class="container mt-5">
      <div class="row">
        <div class="col-3 md-3">
          <table class="mt-5">
            <thead>
              <th>商品カテゴリ</th>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= link_to genre.name, posts_path(genre_id: genre.id) %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col-9 md-9">
          <h1 class="mb-5">投稿一覧</h1>
            <div class="row d-flex flex-wrap">
            <% @post.each do |post| %>
              <div class="col">
                <%= link_to post_path(post.id) do %>
                  <%= image_tag post.get_image(300, 200) %>
                <% end %>
                <p>商品名:<%= post.name %></p>
                <p>★★★★★</p>
                <p>ジャンル：<%= post.genre.name %></p>
                <p>一言：<%= post.title %></p>
                <p>♥：１　<%= link_to "コメント数:#{post.post_comments.count}", post_path(post.id) %></p>
              </div>
            <% end %>
            </div>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @post %>
      </div>
    </div>
  </div>
</div>

