<h3>投稿編集</h3>
<%= render '/layouts/error_messages', post: @post %>

<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, placeholder: "#{@post.name}" %>
  </div>
  <div>
    <%= f.label :title, "一言" %>
    <%= f.text_field :title, placeholder: "#{@post.title}" %>
  </div>
  <div>
    <%= f.label :body, "商品説明（レビュー）" %>
    <%= f.text_area :body, placeholder: "#{@post.body}" %>
  </div>
  <div>
    <%= f.label :genre, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, placeholder: "#{@post.genre.name}" %>
  </div>
  <div>
    <%= f.label :price, "購入価格（税込）" %>
    <%= f.text_field :price, placeholder: "#{}" %>
  </div>
  <div>
    <%= f.label "star" %>
    ★★★★★
  </div>
  <%= f.submit "変更を保存" %>
  <% if @post.user == current_user %>
    <%= link_to "削除する", post_path(@post.id), method: :delete, class:"btn btn-danger px-4" %>
  <% end %>
<% end %>