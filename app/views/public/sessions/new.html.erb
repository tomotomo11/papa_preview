<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="col-2 my-5 bg-light">ログイン</h3>

      <div class="col-3 m-5 bg-light">
        会員の方はこちらからログイン
      </div>

      <div class="col-sm-12 col-md-10 col-lg-8 px-sm-0 mx-auto">

        <%= form_with model: @user, url: user_session_path do |f| %>
          <table class="table table-borderless">
            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
            </tr>

            <tr>
              <td><%= f.label :パスワード（6文字以上）%></td>
              <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
            </tr>

            <!--いつか使用したいのでコメントアウト
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <td><%= f.check_box :remember_me %></td>
                <td><%= f.label :パスワードを記憶する %></td>
              </div>
            <% end %>-->

            <tr>
              <td></td>
              <td><%= f.submit "ログイン", class:"btn btn-primary px-5" %></td>
            </tr>
          </table>
        <% end %>
      </div>
      <div class="col m-5">
        <h6 class="col-3 bg-light">会員登録がお済でない方</h6>
        <div class="mx-5">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
