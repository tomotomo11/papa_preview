<div class="container">
  <div class="row">
    <div class="container mt-5">
      <div class="row">
        <div class="col-9 md-9">
          <h1 class="mb-5">ユーザー一覧</h1>
          <table>
            <thead>
              <th>ユーザー名</th>
              <th>投稿数</th>
              <th>いいね</th>
            </thead>
            <% @users.each do |user| %>
            <tbody>
              <tr>
                <td><%= link_to "#{user.last_name + user.first_name}", user_path(user.id) %></td>
                <td><%= user.posts.count %></td>
                <td></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
    </div>
  </div>
</div>