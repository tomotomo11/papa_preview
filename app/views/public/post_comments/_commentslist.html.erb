<% post.post_comments.each do |post_comment| %>
<div class="d-flex flex-row">
  <div class="col-3 pr-4">
    <h5><%= post_comment.user.full_name %></h5>
    <p><%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
  </div>
  <div class="comment-body my-2">
    <p><%= post_comment.body %></p>
    <div class="text-right">
      <% if post_comment.user == current_user %>
        <%= link_to "削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, class:"btn btn-danger px-4", remote: true, data: {"turbolinks" => false} %>
      <% end %>
    </div>
  </div>
</div>
<% end %>